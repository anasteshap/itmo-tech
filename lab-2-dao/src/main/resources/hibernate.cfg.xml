<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL95Dialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/anastasiia_database</property>
        <property name="hibernate.connection.username">anastasiia_user</property>
        <property name="hibernate.connection.password">password</property>
        <property name="hibernate.connection.autocommit">false</property>

        <property name="hbm2ddl.auto">update</property> <!-- create / create-drop / update -->

        <property name="show_sql">true</property> <!-- Show SQL in console -->
        <property name="format_sql">true</property> <!-- Show SQL formatted -->

        <mapping class="itmo.anasteshap.entities.Cat"/>
        <mapping class="itmo.anasteshap.entities.Owner"/>

    </session-factory>
</hibernate-configuration>